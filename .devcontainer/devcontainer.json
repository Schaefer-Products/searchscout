{
  "name": "SearchScout Dev",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "angular-app",
  "containerEnv": {
    "SHELL": "/bin/sh"
  },
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.ng-template",
        "Anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "typescript.tsdk": "/app/node_modules/typescript/lib",
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [4200],
  "postCreateCommand": "npm install && npm install -g @anthropic-ai/claude-code"
}
